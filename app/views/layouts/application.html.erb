<!DOCTYPE html>
<html>
<head>
  <title>CoursicaApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>



<div id="banner">
</div>

<%= render 'shared/navbar'%>




<p class="navbar-text pull-right">
<% if user_signed_in? %>
  Logged in as <strong><%= current_user.email %></strong></br><%= image_tag(current_user.avatar.url(:thumb)) %><br />
  <%= link_to 'Edit profile', main_app.edit_user_registration_path, :class => 'navbar-link' %> |
  <%= link_to "Logout", main_app.destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
<% else %>
  <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
  <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
<% end %>


<% if notice %>
<div id="notice_wrapper">
  <p class="alert alert-success"><%= notice %></p>
  </div>
<% end %>
<% if alert %>
<div id="notice_wrapper">
  <p class="alert alert-danger"><%= alert %></p>
  </div>
  
<% end %>


<script>
$(function() {
   $("#notice_wrapper").delay(500).fadeIn('normal', function() {
      $("#notice_wrapper").delay(2500).fadeOut();
   });
});
</script>



<%= yield %>



<footer>&copy; 2015 Coursica</footer>



</body>
</html>
